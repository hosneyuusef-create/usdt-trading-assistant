{
  "name": "usdt-trading-backend",
  "version": "0.1.0",
  "description": "Production-grade USDT trading assistant backend (Fastify + PostgreSQL).",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/server/index.js",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "pretest": "npm run migrate:test",
    "test": "cross-env NODE_ENV=test vitest run",
    "test:watch": "cross-env NODE_ENV=test vitest",
    "migrate:dev": "node ./node_modules/knex/bin/cli.js --knexfile knexfile.cjs migrate:latest",
    "migrate:rollback": "node ./node_modules/knex/bin/cli.js --knexfile knexfile.cjs migrate:rollback",
    "migrate:test": "cross-env NODE_ENV=test node ./node_modules/knex/bin/cli.js --knexfile knexfile.cjs migrate:latest",
    "seed:users": "node --loader ts-node/esm scripts/seed-users.mjs",
    "format": "prettier --write \"{src,scripts,tests}/**/*.{ts,tsx,js}\""
  },
  "engines": {
    "node": ">=18.19.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^8.1.1",
    "@fastify/sensible": "^5.6.0",
    "bcryptjs": "^2.4.3",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "fastify-plugin": "^5.1.0",
    "fastify-type-provider-zod": "^1.2.0",
    "grammy": "^1.38.3",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "pg": "^8.12.0",
    "pino": "^9.3.2",
    "pino-pretty": "^11.2.2",
    "prom-client": "^15.1.3",
    "tslib": "^2.8.1",
    "uuid": "^11.0.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.8.6",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "@vitest/coverage-v8": "^2.1.5",
    "cross-env": "^7.0.3",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.4.1",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.13.0",
    "vitest": "^2.1.5"
  }
}
